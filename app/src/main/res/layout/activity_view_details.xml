<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mheljohn.qrsys.ViewDetailsActivity">

    <Button
        android:text="View QR Code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewQR"
        android:textSize="14dp"
        android:paddingTop="12dp"
        android:layout_above="@+id/cancel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/stockDetail"
        android:textSize="12dp"
        android:paddingTop="12dp"
        android:paddingLeft="70dp"
        android:layout_above="@+id/viewQR"
        android:layout_toRightOf="@+id/StockText"
        android:layout_toEndOf="@+id/StockText" />

    <TextView
        android:text="Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NameText"
        android:paddingTop="12dp"
        android:textSize="13dp"
        android:paddingLeft="55dp"
        android:layout_above="@+id/PriceText"
        android:layout_alignLeft="@+id/PriceText"
        android:layout_alignStart="@+id/PriceText"
        android:layout_toLeftOf="@+id/nameDetail"
        android:layout_toStartOf="@+id/nameDetail" />

    <TextView
        android:text="Price:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="55dp"

        android:id="@+id/PriceText"
        android:paddingTop="12dp"
        android:textSize="13dp"

        android:layout_above="@+id/StockText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/priceDetail"
        android:layout_toStartOf="@+id/priceDetail" />

    <TextView
        android:text="Availability:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/StockText"
        android:paddingTop="12dp"
        android:textSize="13dp"
        android:paddingLeft="55dp"
        android:layout_above="@+id/viewQR"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameDetail"
        android:paddingTop="12dp"
        android:textSize="12dp"

        android:paddingLeft="70dp"
        android:layout_alignTop="@+id/NameText"
        android:layout_toRightOf="@+id/PriceText"
        android:layout_toEndOf="@+id/PriceText" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:textSize="12dp"
        android:id="@+id/priceDetail"
        android:paddingLeft="70dp"

        android:layout_alignTop="@+id/PriceText"
        android:layout_toRightOf="@+id/StockText"
        android:layout_toEndOf="@+id/StockText" />

    <ImageView

        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageDetail"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel Reservation"
        android:layout_alignParentBottom="true"
        android:textSize="14dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
